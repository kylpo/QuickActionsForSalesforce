{
    "manifest_version": 2,

    "name": "Chrome Publisher for Salesforce",
    "description": "Perform Salesforce's Publisher Actions directly from Chrome! No need to be on a salesforce.com page.",
    "version": "0.0.7",
	
	"icons": {
		"16": "icon-flat.png",
		"48": "icon-flat.png",
		"128": "icon-flat.png"
	},

    "permissions": [
        "https://*.salesforce.com/",
        "identity",
		"activeTab",
        "storage"
    ],

    "background": {
        "scripts": ["background.built.js"]
    },

    "browser_action": {
        "default_icon": "icon-flat.png",
        "default_popup": "popup.html"
    },

    "commands": {
        "_execute_browser_action": {
            "suggested_key": {
                "default": "Ctrl+Shift+0"
            },
            "global" : true
        }
    }
}